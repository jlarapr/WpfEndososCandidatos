<Window x:Class="WpfEndososCandidatos.View.wpfLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"  
        Background="Beige"
        Title="Login" Height="160" Width="251" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="0,0,4,0">
        <Border BorderBrush="Red"  BorderThickness="5" Margin="0" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="178*"/>
                    <ColumnDefinition Width="9*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="cmdCancel" Command="{Binding cancel_Click}" Content="Cancel" Margin="134,0,0,0" Height="24" VerticalAlignment="Bottom"/>
                <Button x:Name="cmdOK" Command="{Binding oK_Click}"  Content="Ok" HorizontalAlignment="Left" Margin="54,0,0,0" Width="75" Height="24" VerticalAlignment="Bottom" CommandParameter="{Binding ElementName=txtPassword}"/>
                <Label Content="User Name:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
                <Label Content="Password:" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
                <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="86,52,0,0" TextWrapping="Wrap" Text="{Binding txtUserName_txt}" VerticalAlignment="Top" Width="120"/>
                <Label Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="206" FontWeight="Bold" FontSize="16"/>
                <PasswordBox x:Name="txtPassword"  HorizontalAlignment="Left" Margin="86,81,0,0" VerticalAlignment="Top" Width="120"/>
            </Grid>
        </Border>


    </Grid>
</Window>
