<Window x:Class="WpfEndososCandidatos.View.wpfMantPartidos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="wpfMantPartidos" Height="323.965" Width="351.558" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border  BorderBrush="{Binding BorderBrush}"  BorderThickness="5" Margin="-2" CornerRadius="5">

        <Grid>
            <Label Content="Mantenimiento - Partidos" VerticalAlignment="Top" Height="55" FontWeight="Bold" FontSize="26.667" Margin="5,5,5,0"/>
            <Button Content="Salir" Command="{Binding cmdSalir_Click}" HorizontalAlignment="Left" Margin="170,282,0,0" VerticalAlignment="Top" Width="75"/>
            <GroupBox x:Name="groupBox" Header="Partidos"  HorizontalAlignment="Left" Height="187" Margin="5,65,0,0" VerticalAlignment="Top" Width="336">
                <Grid Margin="0">
                    <Label x:Name="lblNumPartido" Content="Partido" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblNombre" Content="Nombre" HorizontalAlignment="Left" Margin="64,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="dfNumPartido" HorizontalAlignment="Left" Height="23" Margin="5,31,0,0" TextWrapping="Wrap" Text="{Binding dfNumPartido}" VerticalAlignment="Top" Width="54"/>
                    <ComboBox x:Name="cbPartidos" HorizontalAlignment="Left" Margin="64,32,0,0" VerticalAlignment="Top" Width="250"/>
                    <Label x:Name="lblArea" Content="Area Geografica" HorizontalAlignment="Left" Margin="5,59,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cmbArea" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="304"/>
                    <Label x:Name="lblEndoReq" Content="Endosos Req." HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtEndoReq" HorizontalAlignment="Left" Height="23" Margin="10,133,0,0" TextWrapping="Wrap" Text="{Binding dfNumPartido}" VerticalAlignment="Top" Width="54"/>
                </Grid>
            </GroupBox>
            <Button x:Name="cmdAdd" Content="Añadir" Command="{Binding cmdAdd_Click}" HorizontalAlignment="Left" Margin="10,257,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="cmdDelete" Content="Borrar" Command="{Binding cmdDelete_Click}" HorizontalAlignment="Left" Margin="90,257,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="cmdEdit" Content="Editar" Command="{Binding cmdEdit_Click}" HorizontalAlignment="Left" Margin="10,282,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="cmdSave" Content="Guardar" Command="{Binding cmdSavet_Click}" HorizontalAlignment="Left" Margin="90,282,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>
    </Border>
</Window>
