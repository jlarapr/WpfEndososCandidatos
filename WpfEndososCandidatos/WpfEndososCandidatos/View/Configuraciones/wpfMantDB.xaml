<Window x:Class="WpfEndososCandidatos.View.wpfMantDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"  
        xmlns:PassHelper="clr-namespace:WpfEndososCandidatos.Helper"
        Background="Beige"
        Title="Mantenimiento - Base de Datos" Height="654.765" Width="440.031" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border BorderBrush="Red" BorderThickness="5"  Margin="0" CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Path para la imágenes" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="134" Grid.Column="1" Height="26"/>
            <TextBox x:Name="dfPathtoPictures" HorizontalAlignment="Left" Height="23" Margin="144,13,0,0" TextWrapping="Wrap" Text="{Binding dfPathtoPictures_txt}" VerticalAlignment="Top" Width="215" Grid.Column="1"/>
            <Button x:Name="cmdBrowseImagesPath" Content="Buscar..." HorizontalAlignment="Left" Margin="364,14,0,0" VerticalAlignment="Top" Width="53" Command="{Binding cmdBrowseImagesPath_Click}" Grid.Column="1" Height="22" />

            <Border BorderBrush="Black" BorderThickness="1"  Margin="10,41,0,0" CornerRadius="5" Grid.Column="1" Height="189" VerticalAlignment="Top" HorizontalAlignment="Left" Width="407">
                <GroupBox Header="Endosos - Base de Datos" Margin="1">
                    <Grid Margin="2">
                        <Label Content="Servidor" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.579,-0.154"/>
                        <TextBox x:Name="dfServer" HorizontalAlignment="Left" Height="23" Margin="152,13,0,0" TextWrapping="Wrap" Text="{Binding dfServer_txt}" VerticalAlignment="Top" Width="205"/>
                        <Label Content="Usuario (Base deDatos)" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="dfUsername" HorizontalAlignment="Left" Height="23" Margin="152,44,0,0" TextWrapping="Wrap" Text="{Binding dfUsername_txt}" VerticalAlignment="Top" Width="205"/>
                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
                        <PasswordBox x:Name="dfPassword" HorizontalAlignment="Left" Height="23" Margin="152,75,0,0"  VerticalAlignment="Top" Width="205">
                            <i:Interaction.Behaviors>
                                <PassHelper:PasswordBoxBindingBehavior Password="{Binding dfPassword_txt,Mode=TwoWay}" />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <Label Content="Base de Datos" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top"/>
                        <ComboBox x:Name="cbDatabase" ItemsSource="{Binding cbDatabase}" 
                                                      SelectedItem="{Binding cbDatabase_Item}" 
                                                      SelectedIndex="{Binding cbDatabase_Item_Id }" HorizontalAlignment="Left" Margin="152,108,0,0" VerticalAlignment="Top" Width="169"/>
                        <Button x:Name="cmdReloadDBs" Command="{Binding cmdReloadDBs_Click}" Content="..." HorizontalAlignment="Left" Margin="326,108,0,0" VerticalAlignment="Top" Width="31"/>
                    </Grid>
                </GroupBox>
            </Border>

            <Button x:Name="cmdCancel" Content="Cancel" Grid.Column="1" HorizontalAlignment="Left" Margin="342,585,0,0" VerticalAlignment="Top" Width="75" Command="{Binding cmdCancel_Click}" Height="22" />
            <Border CornerRadius="5" BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="170" Margin="10,235,0,0" VerticalAlignment="Top" Width="407">
                <GroupBox Header="Master - Base de Datos" Margin="1">
                    <Grid Margin="2">
                        <Label Content="Servidor" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="dfMastSvr" HorizontalAlignment="Left" Height="23" Margin="148,13,0,0" TextWrapping="Wrap" Text="{Binding dfMastSvr_txt}" VerticalAlignment="Top" Width="209"/>
                        <Label Content="Usuario (Base deDatos)" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="dfMastUsr" HorizontalAlignment="Left" Height="23" Margin="148,44,0,0" TextWrapping="Wrap" Text="{Binding dfMastUsr_txt}" VerticalAlignment="Top" Width="209"/>
                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="64"/>
                        <PasswordBox x:Name="dfMastPass" HorizontalAlignment="Left" Height="23" Margin="148,74,0,0"  VerticalAlignment="Top" Width="209">
                            <i:Interaction.Behaviors>
                                <PassHelper:PasswordBoxBindingBehavior Password="{Binding dfMastPass_txt,Mode=TwoWay}"  />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <Label Content="Base de Datos" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top"/>
                        <ComboBox x:Name="cbMastDB"  ItemsSource="{Binding cbMastDB}"
                                                     SelectedItem="{Binding cbMastDB_Item}"
                                                     SelectedIndex="{Binding cbMastDB_Item_Id}"
                                  HorizontalAlignment="Left" Margin="148,108,0,0" VerticalAlignment="Top" Width="169"/>
                        <Button x:Name="cmdReloadMastDBs" Command="{Binding cmdReloadMastDBs_Click}" Content="..." HorizontalAlignment="Left" Margin="326,108,0,0" VerticalAlignment="Top" Width="31"/>
                    </Grid>
                </GroupBox>
            </Border>
            <Border CornerRadius="5" BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="170" Margin="10,410,0,0" VerticalAlignment="Top" Width="407">
                <GroupBox Header="Master - Imagenes" Margin="1">
                    <Grid Margin="2">
                        <Label Content="Servidor" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="dfImageSvr" HorizontalAlignment="Left" Height="23" Margin="148,13,0,0" TextWrapping="Wrap" Text="{Binding dfImageSvr_txt}" VerticalAlignment="Top" Width="209"/>
                        <Label Content="Usuario (Base deDatos)" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="dfImageUsr" HorizontalAlignment="Left" Height="23" Margin="148,44,0,0" TextWrapping="Wrap" Text="{Binding dfImageUsr_txt}" VerticalAlignment="Top" Width="209"/>
                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="64"/>
                        <PasswordBox x:Name="dfImagePass" HorizontalAlignment="Left" Height="23" Margin="148,74,0,0"  VerticalAlignment="Top" Width="209">
                            <i:Interaction.Behaviors>
                                <PassHelper:PasswordBoxBindingBehavior Password="{Binding dfImagePass_txt,Mode=TwoWay}" />
                            </i:Interaction.Behaviors>
                        </PasswordBox>
                        <Label Content="Base de Datos" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top"/>
                        <ComboBox x:Name="cbImageDB" ItemsSource="{Binding cbImageDB}"
                                  SelectedItem="{Binding cbImageDB_Item}"
                                  SelectedIndex="{Binding cbImageDB_Item_Id}"
                                  HorizontalAlignment="Left" Margin="148,108,0,0" VerticalAlignment="Top" Width="169"/>
                        <Button x:Name="cmdReloadImageDBs" Command="{Binding cmdReloadImageDBs_Click}" Content="..." HorizontalAlignment="Left" Margin="326,108,0,0" VerticalAlignment="Top" Width="31"/>
                    </Grid>
                </GroupBox>
            </Border>
            <Button x:Name="cmdOk" Command="{Binding cmdOk_Click}" Content="Ok" Grid.Column="1" HorizontalAlignment="Left" Margin="262,585,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>
    </Border>
</Window>
