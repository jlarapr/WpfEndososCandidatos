            <GroupBox x:Name="groupBox" Header="Criterio de Validacion" Margin="5,60,5,0" VerticalAlignment="Top" Height="283">
                <Grid Margin="0"/>
            </GroupBox>

        </Grid>
    </Border>
</Window>
