<Window x:Class="WpfEndososCandidatos.View.wpfAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"  
        Title="About" Height="335" Width="372" Background="Beige" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None"  >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding InitWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <DockPanel>

        <Border CornerRadius="5" BorderBrush="Black" BorderThickness="5">
            <Grid>
                <Label  Content="Endosos - Partidos" Margin="10,10,10,0" VerticalAlignment="Top" Height="75" FontWeight="Bold" FontSize="36"/>
                <Label Content="{Binding mensaje}" Margin="10,90,10,0" VerticalAlignment="Top" Height="86"/>

                <Button x:Name="cmOk" Command="{Binding ok_Click}" Content="O_k" HorizontalAlignment="Left" Margin="260,238,0,0" VerticalAlignment="Top" Width="75"/>

                <Line X1="10" Y1="200" X2="350" Y2="200" StrokeThickness="4"  Stroke="Red" ></Line>
            </Grid>

        </Border>

    </DockPanel>

</Window>
