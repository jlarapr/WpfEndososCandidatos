<Window x:Class="WpfEndososCandidatos.View.wpfLotAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"  
        Title="wpfLotAuth" Height="332.456" Width="351.558" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border  BorderBrush="{Binding BorderBrush}"  BorderThickness="5" Margin="-2" CornerRadius="5">
        <Grid Margin="0">
            <Label Content="Lote Digitalizado" VerticalAlignment="Top" Height="55" FontWeight="Bold" FontSize="36" Margin="5,5,5,0"/>
            <Button Content="Salir" Command="{Binding cmdSalir_Click}" HorizontalAlignment="Left" Margin="140,260,0,0" VerticalAlignment="Top" Width="82" Height="28"/>
            <Line X1="1" Y1="0" X2="341" Y2="0" StrokeThickness="4"  Stroke="Black" Margin="0,188,0,80" />
            <Line X1="1" Y1="0" X2="341" Y2="0" StrokeThickness="4"  Stroke="Black" Margin="0,55,0,212" />
            <Label Content="Lote (Num Secretaría)" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,91,0,0" TextWrapping="Wrap" Text="{Binding numLote}" VerticalAlignment="Top" Width="120"/>
            <Label Content="Cantidad" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,150,0,0" TextWrapping="Wrap" Text="{Binding cantidad}" VerticalAlignment="Top" Width="120"/>
            <Button Content="Añadir Lote" Command="{Binding cmdAddLot_Click}" HorizontalAlignment="Left" Margin="231,150,0,0" VerticalAlignment="Top" Width="82" Height="28"/>
            <Button Content="Añadir Todos" Command="{Binding cmdAddTodoLot_Click}" HorizontalAlignment="Left" Margin="140,201,0,0" VerticalAlignment="Top" Width="82" Height="28"/>
            <Label x:Name="lblCount"  HorizontalAlignment="Left" Margin="140,91,0,0" VerticalAlignment="Top"
                   Content="{Binding lblCount}"
                   Background="Gray" Height="23" Width="31"
                   />
            <Line X1="1" Y1="0" X2="341" Y2="0" StrokeThickness="4"  Stroke="Black" Margin="0,246,0,22" />




        </Grid>
    </Border>
</Window>
