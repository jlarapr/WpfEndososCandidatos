<Window x:Class="WpfEndososCandidatos.View.wpfLotAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"  
        Title="wpfLotAuth" Height="282.456" Width="351.558" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border  BorderBrush="{Binding BorderBrush}"  BorderThickness="5" Margin="-2" CornerRadius="5">
        <Grid Margin="0">
            <Label Content="Lote Digitalizado" VerticalAlignment="Top" Height="55" FontWeight="Bold" FontSize="36" Margin="5,5,5,0"/>
            <Button Content="Salir" Command="{Binding cmdSalir_Click}" HorizontalAlignment="Left" Margin="133,234,0,0" VerticalAlignment="Top" Width="75"/>
            <Line X1="1" Y1="0" X2="341" Y2="0" StrokeThickness="4"  Stroke="Black" Margin="0,225,0,43" />
            <Line X1="1" Y1="0" X2="341" Y2="0" StrokeThickness="4"  Stroke="Black" Margin="0,55,0,212" />
            <Label Content="Lote (Num Secretaría)" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,91,0,0" TextWrapping="Wrap" Text="{Binding numLote}" VerticalAlignment="Top" Width="120"/>
            <Label Content="Cantidad" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,160,0,0" TextWrapping="Wrap" Text="{Binding cantidad}" VerticalAlignment="Top" Width="120"/>
            <Button Content="Añadir Lote" Command="{Binding cmdAddLot_Click}" HorizontalAlignment="Left" Margin="231,91,0,0" VerticalAlignment="Top" Width="82"/>
            <Button Content="Añadir Todos" Command="{Binding cmdAddTodoLot_Click}" HorizontalAlignment="Left" Margin="231,160,0,0" VerticalAlignment="Top" Width="82"/>




        </Grid>
    </Border>
</Window>
