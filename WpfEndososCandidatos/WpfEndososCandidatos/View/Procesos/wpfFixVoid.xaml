<Window x:Class="WpfEndososCandidatos.View.wpfFixVoid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="wpfFixVoid" Height="872.067" Width="1128.247" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"  >

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>

    </i:Interaction.Triggers>
    <Border  BorderBrush="{Binding BorderColor}"  Background="Silver" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="10" Margin="10" Padding="4">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Opacity="80" ShadowDepth="16"></DropShadowEffect>
        </Border.Effect>
        <Grid Margin="10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="238*"/>
                <ColumnDefinition Width="439*"/>
                <ColumnDefinition Width="439*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="177*"/>
                <RowDefinition Height="565*"/>
                <RowDefinition Height="76*"/>
            </Grid.RowDefinitions>
            <GroupBox  x:Name="groupBox" Header="Imagen" Margin="5,0,0,0" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid Background="Black">


                    <ScrollViewer  Background="Beige"  
                           HorizontalScrollBarVisibility="Auto" 
                           VerticalScrollBarVisibility="Auto" 
                           Margin="10" 
                           x:Name="scrollViewer" 
                           KeyboardNavigation.IsTabStop="False"  >

                        <Canvas x:Name="miCanvas" Background="Yellow"  
                                  Width="{Binding ViewboxWidth}" 
                                 Height="{Binding ViewboxHeight}" 
                                 KeyboardNavigation.IsTabStop="False"   >

                            <Viewbox x:Name="miViewbox"  Stretch="Fill"                          
                                    Width="{Binding ViewboxWidth}" Height="{Binding ViewboxHeight}"  >

                                <Image  x:Name="myimage" Source="{Binding Source_image}"
                                    Stretch="None" 
                                  
                                    KeyboardNavigation.IsTabStop="False" Margin="0"
                                    />
                            </Viewbox>

                            <Rectangle x:Name="selectionRectangle"
                                StrokeThickness="1"
                                Stroke="LightBlue"
                                Fill="#220000FF"
                                Visibility="Collapsed" />

                        </Canvas>

                    </ScrollViewer>



                </Grid>
            </GroupBox>

            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" x:Name="label" Content="Razón del Rechazo" Margin="0,5,10,0" VerticalAlignment="Top" Height="26" Grid.Column="1"/>
            <Label x:Name="txtRazonRechazo" Margin="0,36,0,0"  Background="Yellow" 
                       Grid.Column="1" 
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="ExtraBold"
                       Content="{Binding Path=txtRazonRechazo}"
                       />
            <StackPanel Margin="10,13,0,12" Grid.Row="2" HorizontalAlignment="Left" Grid.ColumnSpan="2" Width="606" Orientation="Horizontal">
                <Button Content="&lt; Anterior" Command="{Binding cmdAnterior_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>
                <Button Content="Próximo &gt;" Command="{Binding cmdProximo_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>
                <Button Content="Ver Elector" Command="{Binding cmdVerElec_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>
                <Button Content="Guardar" Command="{Binding cmdGuardar_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>
                <Button Content="Salir" Command="{Binding cmdSalir_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>

            </StackPanel>
            <Label x:Name="label1" Content="Endoso Rechazado" Margin="5,4,15,0" FontSize="21.333" Height="38" VerticalAlignment="Top"/>

            <GroupBox x:Name="groupBox1" Header="Información del Master" Height="279" Margin="10,10,10,0" VerticalAlignment="Top" Grid.Column="2" Grid.RowSpan="2">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="46"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="84*"/>
                        <ColumnDefinition Width="97*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="txtNombre" Height="30" Margin="5,10,10,0"  VerticalAlignment="Top"
                                   Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtNombre}" Grid.ColumnSpan="2" 
                                   />
                    <Label x:Name="label2" Content="Número Electoral:" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Height="26" Width="105" Grid.Row="1"/>
                    <Label x:Name="label3" Content="Precinto:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="56" Grid.Row="2"/>
                    <Label x:Name="label4" Content="Sexo:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="38" Grid.Row="3"/>
                    <Label x:Name="label5" Content="Fecha Nac. (mm/dd/yyyy):" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="148" Grid.Row="4"/>
                    <Label x:Name="label6" Content="Funcionario:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="84" Grid.Row="5"/>
                    <Label x:Name="txtNumElec" Height="26" Margin="5,2,10,0"   VerticalAlignment="Top"
                                   Background="Yellow"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtNumElec}" Grid.Column="1" Grid.Row="1"
                                   />
                    <Label x:Name="txtPrecinto" Height="26" Margin="5,2,11,0"  VerticalAlignment="Top"
                                   Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    Content="{Binding txtPrecinto}" Grid.Column="1" Grid.Row="2"
                                   />
                    <Label x:Name="txtSex" Margin="5,2,10,7" 
                                   Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtSex}" Grid.Column="1" Grid.Row="3"
                                   />
                    <Label x:Name="txtFechaNac" Height="26" Margin="5,2,10,0"   VerticalAlignment="Top"
                                   Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtFechaNac}" Grid.Column="1" Grid.Row="4"
                                   />
                    <Label x:Name="txtNotarioNumElec" Height="26" Margin="94,2,10,0"   VerticalAlignment="Top"
                                   Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtNotarioNumElec}" Grid.Row="5" Grid.ColumnSpan="2"
                                   
                                   />
                    <Label x:Name="txtNotarioFirstName" Height="26" Margin="5,41,11,0"  VerticalAlignment="Top"
                                    Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                   Content="{Binding txtNotarioFirstName}" Grid.Row="5" Grid.ColumnSpan="2"
                                   />

                </Grid>
            </GroupBox>

            <Label x:Name="lblLote" Content="{Binding Lot}" Margin="87,54,0,0" VerticalAlignment="Top" Height="26"/>
            <Label x:Name="label14" Content="Lote:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Height="26" Width="36"/>
            <Label x:Name="label14_Copy" Content="Rechazada:" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Height="26" Width="72"/>
            <Label Background="Yellow" x:Name="lblLote_Copy" Content="{Binding TotalRechazada}" Margin="164,85,15,0" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <Label Background="Yellow" x:Name="lblLote_Copy1" Content="{Binding i_Display}" Margin="82,85,97,0" VerticalAlignment="Top" Height="26" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center"/>
            <Label x:Name="label15" Content="de" HorizontalAlignment="Left" Margin="136,85,0,0" VerticalAlignment="Top" Height="26" Width="23"/>
            <Button Content="ZOOM +"  Margin="57,144,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28"
            	Command="{Binding cmdZoomInOut}" CommandParameter="IN"   />
            <Button Content="ZOOM -" Margin="139,144,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28"
            	Command="{Binding cmdZoomInOut}"  CommandParameter="OUT"/>
            <Label x:Name="lblI" Content="{Binding i}" HorizontalAlignment="Left" Margin="10,144,0,0" VerticalAlignment="Top" Height="26" Width="36"/>
            <GroupBox x:Name="groupBox2" Header="Información a Corregir" Margin="26,117,30,12" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2">
                <Grid Margin="0,0,0,53">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="181*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="474"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="label2_Copy" Content="Número Electoral:" HorizontalAlignment="Left" Margin="10,40,0,408" Width="105"/>
                    <TextBox x:Name="txtNumElec_Corregir" Margin="10,40,10,0" TextWrapping="Wrap"
            			MaxLength="7"
            			Text="{Binding txtNumElec_Corregir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            			Grid.Column="1" Height="23" VerticalAlignment="Top" 
                                     />
                    <Label Height="23"  x:Name="label3_Copy" Content="Precinto:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,75,0,0" Width="56"/>
                    <TextBox x:Name="txtPrecinto_Corregir" Height="23" Margin="10,75,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="3"
            			Text="{Binding txtPrecinto_Corregir, Mode=TwoWay}" 
            			Grid.Column="1" HorizontalAlignment="Left" Width="55" 
                                     />
                    <Label Height="23"  x:Name="label4_Copy" Content="Sexo:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.342,0.538" Margin="90,75,0,0" Width="38" Grid.Column="1"/>
                    <TextBox x:Name="txtSex_Corregir" Height="23" Margin="140,75,-8,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="1"
            			CharacterCasing="Upper"
            			Text="{Binding txtSex_Corregir, Mode=TwoWay}" 
            			Grid.Column="1" HorizontalAlignment="Left" Width="41" 
                                     />
                    <Label Height="28"  x:Name="label7" Content="Cargo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,171,0,0" Width="44"/>
                    <TextBox MaxLength="1" x:Name="txtCargo_Corregir" Height="23" Margin="10,171,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                     
            			Text="{Binding txtCargo_Corregir, Mode=TwoWay}" 
            			Grid.Column="1" 
                                     />
                    <Label Height="23"  x:Name="label8" Content="Candidato:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,206,0,0" Width="67"/>
                    <TextBox x:Name="txtCandidato_Corregir" Height="23" Margin="10,206,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="10"
            			Text="{Binding txtCandidato_Corregir, Mode=TwoWay}"
            			Grid.Column="1"
                                     />
                    <Label Height="23"  x:Name="label9" Content="Funcionario" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,241,0,0" Width="108"/>
                    <TextBox x:Name="txtNotarioElec_Corregir" Height="23" Margin="10,241,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="7"
            			Text="{Binding txtNotarioElec_Corregir, Mode=TwoWay}"
            			Grid.Column="1"
                                     />
                    <Label Height="23"  x:Name="label10" Content="Firma Elector/Funcionario:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,276,0,0" Width="148"/>
                    <TextBox x:Name="txtFirmaElec_Corregir" Height="23" Margin="35,276,106,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="10"
            			Text="{Binding txtFirmaElec_Corregir, Mode=TwoWay}"
            			Grid.Column="1"
                                     />
                    <TextBox x:Name="txtNotarioFirma_Corregir" Height="23" Margin="131,276,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
            			MaxLength="10"
            			Text="{Binding txtNotarioFirma_Corregir, Mode=TwoWay}"
            			Grid.Column="1"
                                     />
                    <Label Height="23"  x:Name="label12" Content="Feccha Juramento:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,311,0,0" Width="108"/>
                    <DatePicker x:Name="txtFchEndoso_Corregir" Height="23" Margin="10,311,10,0" VerticalAlignment="Top"
                        	
            			Text="{Binding txtFchEndoso_Corregir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            			Grid.Column="1"
                                     />
                    <Label Height="28"  x:Name="label13" Content="Fecha Entrega a CEE:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,357,0,0" Width="119"/>
                    <DatePicker x:Name="txtFchEndosoEntregada_Corregir" Height="23" Margin="10,357,10,0"   VerticalAlignment="Top"
                        	
            			Text="{Binding txtFchEndosoEntregada_Corregir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            			Grid.Column="1"
                                     />
                    <CheckBox x:Name="ckbFirma_Pet_Inv" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Width="20"
            			IsChecked="{Binding ckbFirma_Pet_Inv, Mode=TwoWay}" Height="15"
                                  />
                    <CheckBox x:Name="ckbFirma_Not_Inv" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="95,281,0,0" VerticalAlignment="Top" Width="20"
            			IsChecked="{Binding ckbFirma_Not_Inv, Mode=TwoWay}" Height="15"
                                  />
                    <Label Height="28"  x:Name="label13_Copy" Content="Formulario:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,404,0,0" Width="119"/>
                    <Label x:Name="txtFormulario" Height="28" Margin="10,404,0,0"   VerticalAlignment="Top"
            			Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            			Content="{Binding txtFormulario}" Grid.Column="1" HorizontalAlignment="Left" Width="153"
                                   />
                    <Label x:Name="label5_Copy" Content="Fecha Nac. (mm/dd/yyyy):" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Height="26" Width="148"/>
                    <DatePicker Text="{Binding FechaNac_Corregir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" Width="159" SelectedDateFormat="Short" Height="24" />
                    <TextBox x:Name="textBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="10,10,-6,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="351"/>
                </Grid>
            </GroupBox>

        </Grid>

    </Border>
</Window>
