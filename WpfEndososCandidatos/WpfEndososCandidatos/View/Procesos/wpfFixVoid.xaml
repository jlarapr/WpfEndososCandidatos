<Window x:Class="WpfEndososCandidatos.View.wpfFixVoid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="wpfFixVoid" Height="797.622" Width="1128.247" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"  >

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>

    </i:Interaction.Triggers>
    <Border  BorderBrush="{Binding BorderColor}"  Background="Silver" BorderThickness="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="10" Margin="10" Padding="4">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Opacity="80" ShadowDepth="16"></DropShadowEffect>
        </Border.Effect>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="238*"/>
                <ColumnDefinition Width="439*"/>
                <ColumnDefinition Width="439*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="126*"/>
                <RowDefinition Height="568*"/>
                <RowDefinition Height="71*"/>
            </Grid.RowDefinitions>
            <GroupBox x:Name="groupBox" Header="Imagen" Margin="33,0,0,0" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid Margin="0">
                    <Image x:Name="image" Margin="5"/>
                </Grid>
            </GroupBox>
            <Label x:Name="label" Content="Razón del Rechazo" Margin="0,5,209,0" VerticalAlignment="Top" Height="26" Grid.Column="1"/>
            <TextBlock x:Name="txtRazonRechazo" Margin="10,41,10,0" TextWrapping="Wrap" Background="Yellow" Height="69" VerticalAlignment="Top"
                       Grid.Column="1" 
                       Text="{Binding Path=txtRazonRechazo}"
                       />
            <StackPanel Margin="10,10,10,0" Grid.Row="2" Height="51" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <Button Content="Salir" Command="{Binding cmdSalir_Click}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="28" Margin="15,10,0,0"/>
            </StackPanel>
            <Label x:Name="label1" Content="Endoso Rechazado" Margin="5,4,15,0" FontSize="21.333" Height="38" VerticalAlignment="Top"/>
            <StackPanel Grid.Column="2" Margin="10,0,10,10" Grid.RowSpan="3">
                <GroupBox x:Name="groupBox1" Header="Información del Master" Height="284" Margin="10,0" VerticalAlignment="Top">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="46"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="84*"/>
                            <ColumnDefinition Width="97*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtNombre" Height="30" Margin="5,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"
                                   Background="Yellow"
                                   Text="{Binding txtNombre}" Grid.ColumnSpan="2" 
                                   />
                        <Label x:Name="label2" Content="Número Electoral:" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Height="26" Width="105" Grid.Row="1"/>
                        <Label x:Name="label3" Content="Precinto:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="56" Grid.Row="2"/>
                        <Label x:Name="label4" Content="Sexo:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="38" Grid.Row="3"/>
                        <Label x:Name="label5" Content="Fecha Nac. (mm/dd/yyyy):" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="148" Grid.Row="4"/>
                        <Label x:Name="label6" Content="Funcionario:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Height="26" Width="84" Grid.Row="5"/>
                        <TextBlock x:Name="txtNumElec" Height="26" Margin="5,2,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                   Background="Yellow"
                                   Text="{Binding txtNumElec}" Grid.Column="1" Grid.Row="1"
                                   />
                        <TextBlock x:Name="txtPrecinto" Height="26" Margin="5,2,11,0" TextWrapping="Wrap" VerticalAlignment="Top"
                                   Background="Yellow"
                                    Text="{Binding txtPrecinto}" Grid.Column="1" Grid.Row="2"
                                   />
                        <TextBlock x:Name="txtSex" Height="26" Margin="5,2,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                   Background="Yellow"
                                   Text="{Binding txtSex}" Grid.Column="1" Grid.Row="3"
                                   />
                        <TextBlock x:Name="txtFechaNac" Height="26" Margin="5,2,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                   Background="Yellow"
                                   Text="{Binding txtFechaNac}" Grid.Column="1" Grid.Row="4"
                                   />
                        <TextBlock x:Name="txtNotarioNumElec" Height="26" Margin="94,2,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                   Background="Yellow"
                                   Text="{Binding txtNotarioNumElec}" Grid.Row="5" Grid.ColumnSpan="2"
                                   
                                   />
                        <TextBlock x:Name="txtNotarioFirstName" Height="26" Margin="5,41,5,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                    Background="Yellow"
                                   Text="{Binding txtNotarioFirstName}" Grid.Row="5"
                                   />
                        <TextBlock x:Name="txtNotarioLastName1" Height="26" Margin="5,41,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                    Background="Yellow"
                                   Text="{Binding txtNotarioLastName1}" Grid.Column="1" Grid.Row="5"
                                   />

                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox2" Header="Información a Corregir" Height="391" Margin="10,0">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="187*"/>
                            <ColumnDefinition Width="175*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="56*"/>
                        </Grid.RowDefinitions>
                        <Label x:Name="label2_Copy" Content="Número Electoral:" HorizontalAlignment="Left" Margin="10,0,0,5" Width="105" Height="27" VerticalAlignment="Bottom"/>
                        <TextBox x:Name="txtNumElec_Corregir" Margin="10,0,10,5" TextWrapping="Wrap"
                        	MaxLength="7"
                        	Text="{Binding Path=MyLotsTable.Rows[0][Numelec], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                     Grid.Column="1" Height="23" VerticalAlignment="Bottom" 
                                     />
                        <Label Height="23"  x:Name="label3_Copy" Content="Precinto:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="1" Width="56"/>
                        <TextBox x:Name="txtPrecinto_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="3"
                        	Text="{Binding txtPrecinto_Corregir}" 
                                     Grid.Column="1" Grid.Row="1" 
                                     />
                        <Label Height="23"  x:Name="label4_Copy" Content="Sexo:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.342,0.538" Margin="10,5,0,0" Grid.Row="2" Width="38"/>
                        <TextBox x:Name="txtSex_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="1"
                        	Text="{Binding txtSex_Corregir}" 
                                     Grid.Column="1" Grid.Row="2" 
                                     />
                        <Label Height="28"  x:Name="label7" Content="Cargo:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="3" Width="44"/>
                        <TextBox x:Name="txtCargo_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                                     
                        	Text="{Binding txtCargo_Corregir}" 
                                     Grid.Column="1" Grid.Row="3" 
                                     />
                        <Label Height="23"  x:Name="label8" Content="Candidato:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="4" Width="67"/>
                        <TextBox x:Name="txtCandidato_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="10"
                        	Text="{Binding txtCandidato_Corregir}"
                                     Grid.Column="1" Grid.Row="4"
                                     />
                        <Label Height="23"  x:Name="label9" Content="Funcionario" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="5" Width="108"/>
                        <TextBox x:Name="txtNotarioElec_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="7"
                        	Text="{Binding txtNotarioElec_Corregir}"
                                     Grid.Column="1" Grid.Row="5"
                                     />
                        <Label Height="23"  x:Name="label10" Content="Firma Elector:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="6" Width="81"/>
                        <TextBox x:Name="txtFirmaElec_Corregir" Height="23" Margin="35,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="10"
                        	Text="{Binding txtFirmaElec_Corregir}"
                                     Grid.Column="1" Grid.Row="6"
                                     />
                        <Label Height="23"  x:Name="label11" Content="Firma Notario:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="7" Width="86"/>
                        <TextBox x:Name="txtNotarioFirma_Corregir" Height="23" Margin="35,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="10"
                        	Text="{Binding txtNotarioFirma_Corregir}"
                                     Grid.Column="1" Grid.Row="7"
                                     />
                        <Label Height="23"  x:Name="label12" Content="Feccha Juramento:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0" Grid.Row="8"/>
                        <TextBox x:Name="txtFchEndoso_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="10"
                        	Text="{Binding txtFchEndoso_Corregir}"
                                     Grid.Column="1" Grid.Row="8"
                                     />
                        <Label Height="28"  x:Name="label13" Content="Fecha Entrega a CEE:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Grid.Row="9"/>
                        <TextBox x:Name="txtFchEndosoEntregada_Corregir" Height="23" Margin="10,5,10,0" TextWrapping="Wrap"  VerticalAlignment="Top"
                        	MaxLength="10"
                        	Text="{Binding txtFchEndosoEntregada_Corregir}"
                                     Grid.Column="1" Grid.Row="9"
                                     />
                        <CheckBox x:Name="ckbFirma_Pet_Inv" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="6" VerticalAlignment="Top" Width="20"
                                  IsChecked="{Binding ckbFirma_Pet_Inv}"
                                  />
                        <CheckBox x:Name="ckbFirma_Not_Inv" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="7" VerticalAlignment="Top" Width="20"
                                  IsChecked="{Binding ckbFirma_Not_Inv}"
                                  />
                    </Grid>
                </GroupBox>
            </StackPanel>
            <Label x:Name="lblLote" Content="{Binding Lot}" Margin="87,54,0,0" VerticalAlignment="Top" Height="26"/>
            <Label x:Name="label14" Content="Lote:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Height="26" Width="36"/>
            <Label x:Name="label14_Copy" Content="Rechazada:" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Height="26" Width="72"/>
            <Label x:Name="lblLote_Copy" Content="{Binding TotalRechazada}" Margin="87,85,0,0" VerticalAlignment="Top" Height="26"/>

        </Grid>

    </Border>
</Window>
