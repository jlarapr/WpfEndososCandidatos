                        <TextBlock
                            x:Name="txt19"
                            Height="15"
                            Margin="5"
                            Foreground="{Binding Foreground_Desc[19]}"
                            Text="{Binding CollCriterios[19].Desc}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            x:Name="txt20"
                            Height="15"
                            Margin="5"
                            Foreground="{Binding Foreground_Desc[20]}"
                            Text="{Binding CollCriterios[20].Desc}"
                            TextWrapping="Wrap" />

                    </StackPanel>
                </Grid>
            </GroupBox>
            <ProgressBar
                Width="289"
                Height="19"
                Margin="14,430,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Maximum="{Binding ProgressBar_Maximum[0]}"
                Value="{Binding ProgressBar_Value[0]}" />
            <Button
                x:Name="cmdView"
                Width="112"
                Height="31"
                Margin="149,454,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding cmdView_Click}"
                Content="Ver Rechazadas" />
            <StackPanel
                Width="293"
                Height="223"
                Margin="10,490,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Gray">
                <Label
                    x:Name="label2"
                    Margin="0,0,10,0"
                    VerticalAlignment="Top"
                    Content="* Enable"
                    FontWeight="Bold"
                    Foreground="Black" />
                <Label
                    x:Name="label2_Copy1"
                    Margin="0,0,10,0"
                    VerticalAlignment="Top"
                    Content="* Warning"
                    FontWeight="Bold"
                    Foreground="Red" />
                <Label
                    x:Name="label2_Copy"
                    Margin="0,0,10,0"
                    VerticalAlignment="Top"
                    Content="* Disable"
