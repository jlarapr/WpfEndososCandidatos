<Window
    x:Class="WpfEndososCandidatos.View.Procesos.wpfLotProcess"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    Title="wpfLotProcess"
    Width="901.558"
    Height="781.456"
    AllowsTransparency="True"
    Background="Transparent"
    Cursor="{Binding MiCursor}"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding initWindow}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.InputBindings>
        <KeyBinding Key="Return" Command="{Binding SendTab}" />
    </Window.InputBindings>
    <Border
        Margin="10"
        Padding="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="Beige"
        BorderBrush="{Binding BorderBrush}"
        BorderThickness="3"
        CornerRadius="10">

        <Border.Effect>
            <DropShadowEffect
                Opacity="80"
                ShadowDepth="16"
                Color="Gray" />
        </Border.Effect>
        <Grid>
            <Label
                Height="49"
                Margin="10,5,588,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Proceso de Lote"
                FontSize="26.667"
                FontWeight="Bold" />
            <Button
                Width="112"
                Height="31"
                Margin="14,454,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding cmdSalir_Click}"
                Content="Salir" />
            <Label
                x:Name="label"
                Margin="10,59,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Lotes:" />
            <ComboBox
                x:Name="cbLot"
                Width="293"
                Margin="10,90,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ItemsSource="{Binding cbLots}"
                SelectedIndex="{Binding cbLots_Item_Id, Mode=TwoWay}"
                SelectedItem="{Binding cbLots_Item, Mode=TwoWay}" />
            <Button
                x:Name="cmdProcess"
                Width="90"
                Height="35"
                Margin="10,129,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding cmdProcess_Click}"
                Content="Procesar Lote" />
            <Button
                x:Name="cmdRefresh"
                Width="90"
                Height="35"
                Margin="105,129,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding cmdRefresh_Click}"
                Content="Refrescar" />
            <GroupBox
                x:Name="groupBox"
                Width="289"
                Height="236"
                Margin="14,189,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Header="Resultados">
                <Grid Margin="5,5,3,5" Background="Gray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label
                        x:Name="label1"
                        Width="65"
                        Height="26"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Lote:" />
                    <Label
                        x:Name="label1_Copy"
                        Height="26"
                        Margin="10,41,194,0"
                        VerticalAlignment="Top"
                        Content="Total:" />
                    <Label
                        x:Name="label1_Copy1"
                        Height="26"
                        Margin="10,72,174,0"
                        VerticalAlignment="Top"
                        Content="Procesadas:" />
                    <Label
                        x:Name="label1_Copy2"
                        Height="26"
                        Margin="10,103,174,0"
                        VerticalAlignment="Top"
                        Content="Aprobadas:" />
                    <Label
                        x:Name="label1_Copy3"
                        Height="26"
                        Margin="10,134,174,0"
                        VerticalAlignment="Top"
                        Content="Rechazadas:" />
                    <Label
                        x:Name="label1_Copy4"
                        Height="26"
                        Margin="10,165,174,0"
                        VerticalAlignment="Top"
                        Content="Warnings:" />
                    <TextBox
                        x:Name="lblLote"
                        Height="26"
                        Margin="110,10,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[0]}" />
                    <TextBox
                        x:Name="lblTota"
                        Height="26"
                        Margin="110,41,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[1]}" />
                    <TextBox
                        x:Name="lblProcesadas"
                        Height="26"
                        Margin="110,72,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[2]}" />
                    <TextBox
                        x:Name="lblAprobadas"
                        Height="26"
                        Margin="110,103,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[3]}" />
                    <TextBox
                        x:Name="lblRechazadas"
                        Height="26"
                        Margin="110,134,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[4]}" />
                    <TextBox
                        x:Name="lblWarnings"
                        Height="26"
                        Margin="110,165,10,0"
                        VerticalAlignment="Top"
                        IsReadOnly="True"
                        Text="{Binding Resultados[5]}" />
                </Grid>
            </GroupBox>
